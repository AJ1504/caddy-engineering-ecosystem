import { z } from "zod";

export const componentSchema = z.object({
  name: z.string(),
  type: z.enum(["cylinder", "torus", "box", "sphere", "cone"]),
  material: z.string().optional(),
  hollow: z.boolean().optional(),
  dimensions: z.record(z.number()),
  position: z.object({
    x: z.number(),
    y: z.number(),
    z: z.number(),
  }),
  rotation: z.object({
    x: z.number(),
    y: z.number(),
    z: z.number(),
  }),
});

export const modelSchema = z.object({
  object_analysis: z.string(),
  components: z.array(componentSchema),
});
